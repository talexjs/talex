{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./lib", 
    "moduleResolution": "node",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "useUnknownInCatchVariables": false,
    "declaration": false,
    "resolveJsonModule": true
  }
}
